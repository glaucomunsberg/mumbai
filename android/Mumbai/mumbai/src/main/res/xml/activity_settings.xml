<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/settings_categoryAccount">
        <PreferenceScreen
            android:title="@string/settings_accountDefault"
            android:summary="@string/settings_accountDefaultType"
            android:persistent="false">
            <EditTextPreference
                android:id="@+id/setting_accountGoogle"
                android:title="@string/settings_accountGoogle"
                android:summary="@string/settings_accountGoogleDetail"
                android:editable="false">
            </EditTextPreference>
            <EditTextPreference
                android:id="@+id/settings_developer"
                android:title="@string/settings_accountFacebook"
                android:summary="@string/settings_accountFacebookDetail"
                android:focusable="false"
                android:editable="false">
            </EditTextPreference>
            <EditTextPreference
                android:id="@+id/settings_compilation"
                android:title="@string/settings_accountTwitter"
                android:summary="@string/settings_accountTwitterDetail"
                android:inputType="none"
                android:editable="false">
            </EditTextPreference>
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/settings_categoryAdvance">
        <CheckBoxPreference
            android:key="settings_sync"
            android:title="@string/settings_sync"
            android:summary="@string/settings_sync"
            android:defaultValue="true">
        </CheckBoxPreference>
        <CheckBoxPreference
            android:key="settings_sync"
            android:title="@string/settings_notif"
            android:summary="@string/settings_notifSumm"
            android:defaultValue="true">
        </CheckBoxPreference>
        <CheckBoxPreference
            android:key="settings_imgHighResolution"
            android:title="@string/settings_highResolution"
            android:summary="@string/settings_highResolutionSumm"
            android:defaultValue="false">
        </CheckBoxPreference>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/settings_categoryAbout">
        <PreferenceScreen
            android:id="@+id/settings_screenVersion"
            android:title="@string/settings_aboutVersion"
            android:summary="@string/settings_aboutVersionInt"
            android:persistent="false">
            <EditTextPreference
                android:id="@+id/settings_version"
                android:title="@string/settings_aboutVersion"
                android:summary="@string/settings_aboutVersionInt"
                android:editable="false">
            </EditTextPreference>
            <EditTextPreference
                android:id="@+id/settings_developer"
                android:title="@string/settings_aboutDeveloper"
                android:summary="@string/settings_aboutDevelopers"
                android:focusable="false"
                android:editable="false">
            </EditTextPreference>
            <EditTextPreference
                android:id="@+id/settings_compilation"
                android:title="@string/settings_compilation"
                android:summary="@string/settings_compilationDetail"
                android:inputType="none"
                android:editable="false">
            </EditTextPreference>
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>